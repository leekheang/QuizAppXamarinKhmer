<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <android.support.v7.widget.Toolbar
        android:id="@+id/quizToolbar"
        android:theme="@style/AppTheme.DarkAppBar"
        android:elevation="4dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/timerCounterTextView"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.15"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="01:30"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="vertical">
            <TextView
                android:id="@+id/quizPositionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 1/6"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/questionTextView"
                android:textSize="16sp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:text="Business finance can come from "
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionARadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/optionATextView"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="this apple "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionBRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/optionBTextView"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="this apple "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
              <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionCRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/optionCTextView"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="this apple "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
              <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionDRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/optionDTextView"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="this apple "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.25">
            <Button 
                android:id="@+id/processQuizButton" 
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:textColor="@android:color/white"
                android:text="Procced"
                android:textStyle="bold"
                android:layout_height="40dp"
                android:layout_width="200dp"
                android:textAllCaps="false"
                android:background="@drawable/roundbutton"
                />
        </RelativeLayout>
    </LinearLayout>
        
</LinearLayout>
